<h1>Recipe Book!</h1>

<form action="/categories" method="post">
  <label for="category_name">Enter a category</label>
  <input type="text" name="category_name" placeholder="something with exclamation points!">
  <button type="submit">Add category!</button>
</form>

<ul>
<% if @categories.any?() %>
  <% @categories.each() do |category| %>
  <li><a href = "/recipe_list/<%= category.id() %>"><%= category.name() %></a></li>
  <% end %>
  <% else %>
  <p>
    Enter some Categories!  Like Dinner
  </p>
  <% end %>
</ul>
